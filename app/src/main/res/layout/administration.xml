<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otomi"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/inicio"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="311dp"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:text="PALABRAS A REVISAR"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="0dp" />
        <ListView
            android:id="@+id/listWord"
            android:layout_width="match_parent"
            android:layout_height="500dp">
        </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/inicio">
        <Button

            android:id="@+id/btnSignOut"
            android:layout_width="207dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#FFC107"
            android:text="CERRAR SESIÃ“N"
            android:textColor="#213DF3"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="690dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>